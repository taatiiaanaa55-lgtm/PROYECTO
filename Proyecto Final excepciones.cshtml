using System;
using System.Collections.Generic;
using System.Linq; 

namespace Banco
{
	class Program
	{
		public static void Main(string[] args)
		{
			 Banco banco = new Banco("Banco");//Creamos un Banco
             int opcion;

        do //Aca utilizamos un Do while, es decir, va ejecutar todo y al final va comprobar si la condicion 
           //verdadera
        {
            Console.WriteLine();
            Console.WriteLine("------ MENÚ BANCO ------");
            Console.WriteLine();
            Console.WriteLine("1. Agregar cuenta");
            Console.WriteLine("2. Eliminar cuenta");
            Console.WriteLine("3. Listar clientes con más de una cuenta");
            Console.WriteLine("4. Realizar extracción");
            Console.WriteLine("5. Depositar dinero");
            Console.WriteLine("6. Transferir dinero");
            Console.WriteLine("7. Listar cuentas");
            Console.WriteLine("8. Listar clientes");
            Console.WriteLine();
            Console.WriteLine("0. Salir");
            Console.WriteLine();
            Console.Write("Opción: ");
            opcion = int.Parse(Console.ReadLine());
            Console.WriteLine();

            switch (opcion)     // utilizamos switch ya que nos permite facilitar el menu de opciones
            {
            	  case 1:

                    Console.Write("DNI del cliente: ");
                    int dni = int.Parse(Console.ReadLine());

                    // Busca al cliente (cambiamos esto, antes lo teniamos como metodo de banco)

                    Cliente cliente = null;
                    foreach (Cliente c in banco.ListaClientes)//Con el foreach hace un recorrido en la lista de clientes
                    {
                        if (c.Dni == dni)//"Si C.Dni es igual a dni (lo que ingreso el usuario) ejecuta es
                        {
                            cliente = c;
                            break;
                        }
                    }

                    if (cliente == null)//"Si clientes es igual a Vacio"
                    {
                        Console.WriteLine();
                        Console.WriteLine("Usted es un cliente nuevo, debe ingresar los datos:");
                        Console.WriteLine();
                        Console.Write("Nombre: ");
                        string nombre = Console.ReadLine();
                        Console.Write("Apellido: ");
                        string apellido = Console.ReadLine();
                        Console.Write("Dirección: ");
                        string direccion = Console.ReadLine();
                        int telefono = 0;
                        try
                        {
                        	  Console.Write("Teléfono: ");
                         telefono = int.Parse(Console.ReadLine());
                        }
                        catch(FormatException)
                        {
                        	Console.WriteLine("Dato no valido");
                        	break;
                        }
                        string mail = null;
                        try
                        {
                        	 Console.Write("Mail: ");
                         mail = Console.ReadLine();
                            if(!mail.Contains("@"))//verifica si el email tiene un arroba
                            	throw new Exception("falta el arroba @");
                        }
                         catch (Exception)
                        {
                          	Console.WriteLine("No se ingreso el arroba");
                          	Console.WriteLine();
                          	continue;
                        }
                        
                        
                        cliente = new Cliente(nombre, apellido, dni, direccion, telefono, mail);
                        banco.AgregarCliente(cliente);

                        //Esto agrega al nuevo cliente en la lista
                    }
                    

                    Console.WriteLine();
                    double saldo=0;
                    try
                    {
                    	Console.Write("Saldo inicial: ");
                     saldo = double.Parse(Console.ReadLine());
                    }
                    catch(FormatException)
                    {
                    	Console.WriteLine("Dato no valido");
                        	break;
                    }

                    // Genera numero de cuenta (cambiamos esto, antes lo teniamos como metodo de banco)

                    int nroCuenta = banco.CantidadCuentas() > 0 ?//Comprueba si el banco ya tiene cuentas creadas
                        banco.TodasLasCuentas().Max(c => c.Numero) + 1 : 1;
                    //devuelve la lista de todas las cuentas del banco,busca el mayor número de cuenta existente,
                    //genera el siguiente número disponible, así no se repite.
                    Cuenta nueva = new Cuenta(nroCuenta, cliente, saldo);
                    banco.AgregarCuenta(nueva);
                    
                    //Esto agrega al nuevo cliente en la lista
                    
                    Console.WriteLine();
                    Console.WriteLine("Cuenta creada exitosamente. Nº de cuenta:" + nroCuenta);
                    break;
                    
                    
                case 2:
                    int numero =0;
                    try
                    {
                    	Console.Write("Número de cuenta: ");
                    numero = int.Parse(Console.ReadLine());
                    }
                    catch(FormatException)
                    {
                       Console.WriteLine("Ingrese un numero");
                       Console.WriteLine();
                        	break;
                    }

                    // Busca la cuenta (cambiamos esto, antes lo teniamos en metodo como banco)

                    Cuenta cuenta = null;
                    foreach (Cuenta c in banco.TodasLasCuentas())
                    {
                        if (c.Numero == numero)
                        {
                            cuenta = c;//Asignacion
                            break;
                        }
                    }
                    //Si encuentra una cuenta cuyo número (c.Numero) coincide con el ingresado (numero), 
                    //la guarda en la variable cuenta.

                    if (cuenta != null)//"Si la cuenta es destinto a vacio, se elimina"
                    {
                        banco.EliminarCuenta(cuenta);//llamo al metodo para que elimine la cuenta

                        // Tiene mas de una cuenta (cambiamos esto, antes lo teniamos como metodo de banco)

                        bool tieneMasCuentas = banco.TodasLasCuentas().Count(c => c.Titular.Dni == cuenta.Titular.Dni) > 0;
                        //Esto verifica si el cliente tiene mas cuentas,cuando tienen el mismo titular,si es mayor a 0 significa que tiene otras cuentas
                        if (!tieneMasCuentas)//Si no tiene más cuentas, también elimina el cliente
                        {
                            banco.EliminarCliente(cuenta.Titular);
                            Console.WriteLine();
                            Console.WriteLine("Cliente eliminado (ya no tenía más cuentas).");
                        }

                        Console.WriteLine();
                        Console.WriteLine("Cuenta eliminada correctamente.");
                    }
                    else 
                    {
                        Console.WriteLine("Cuenta no encontrada.");
                    }
                   
                
                    break;

                case 3:
                    // Obtiene clientes con mas de una cuenta (cambiamos esto, antes lo teniamos como metodo de banco)

                    List<Cliente> clientesRepetidos = new List<Cliente>();//Se crea una nueva lista para los clientes repetidos

                    foreach (Cliente cli in banco.TodosLosClientes())
                    {
                        int cantidadCuentas = 0;

                        foreach (Cuenta cta in banco.TodasLasCuentas())
                        {
                            if (cta.Titular.Dni == cli.Dni) 
                            {
                                cantidadCuentas++;
                            }
                 
                        }

                        if (cantidadCuentas > 1) //"si la cantidadCuentas es mayor a 1 , se agrega a la lista de clientes repetidos.
                        {
                            clientesRepetidos.Add(cli);
                        }
   
                    }

                    if (clientesRepetidos.Count == 0)
                    {
                        Console.WriteLine("No hay clientes con más de una cuenta.");
                    }

                    else
                    {
                        // Recorre los clientes con mas de una cuenta

                        foreach (Cliente cli in clientesRepetidos)
                        {
                            Console.WriteLine("Cliente: " + cli.Nombre + " " + cli.Apellido + " - DNI: " + cli.Dni);
                            Console.WriteLine();

                            // Muestra las cuentas de ese cliente

                            foreach (Cuenta cta in banco.TodasLasCuentas())
                            {
                                if (cta.Titular.Dni == cli.Dni)
                                    Console.WriteLine("  Cuenta Nº " + cta.Numero + " - Saldo: " + cta.Saldo);
                            }

                        }
                    }
                    break;

                case 4:
                    Console.Write("Número de cuenta: ");
                    int nroExtraccion = int.Parse(Console.ReadLine());
                    Console.WriteLine();

                    // Busca Cuenta (cambiamos esto, antes lo teniamos como metodo de banco)

                    Cuenta extraerDe = null;
                    foreach (Cuenta c in banco.TodasLasCuentas())
                    {
                        if (c.Numero == nroExtraccion)
                        {
                            extraerDe = c;
                            break;
                        }
                    }
                    //Si encuentra una cuenta cuyo número (c.Numero) coincide con el ingresado (nroExtraccion), 
                    //la guarda en la variable extraerDe.
                    if (extraerDe == null)
                    {
                        Console.WriteLine("Cuenta no encontrada.");
                        break;
                    }

                    Console.Write("Monto a extraer: ");
                    double montoExt = double.Parse(Console.ReadLine());
                    Console.WriteLine();

                    try //Codigo para una excepcion
                    {
                        extraerDe.Extraer(montoExt);//Extrae el numero ingresado del usuario del saldo del cliente
                        Console.WriteLine("Nuevo saldo: " + extraerDe.Saldo);
                    }
                    catch (MontoinsuficienteExcepcion)//Sirve para atrapar y manejar los errores que pueden ocurrir
                    {
                        Console.WriteLine();
                        Console.WriteLine("Saldo insuficiente.");
                    }
                    break;

                case 5:
                    Console.Write("Número de cuenta: ");
                    int nroDep = int.Parse(Console.ReadLine());
                    Console.WriteLine();

                    // Busca Cuenta (cambiamos esto, antes lo teniamos como metodo de banco)

                    Cuenta depositarEn = null;
                    foreach (Cuenta c in banco.TodasLasCuentas())
                    {
                        if (c.Numero == nroDep)
                        {
                            depositarEn = c;
                            break;
                        }
                    }
        //Si encuentra una cuenta cuyo número (c.Numero) coincide con el ingresado (nroDep), 
                    //la guarda en la variable depositarEn.
                    if (depositarEn == null)
                    {
                        Console.WriteLine("Cuenta no encontrada.");
                        break;
                    }

                    Console.Write("Monto a depositar: ");
                    double montoDep = double.Parse(Console.ReadLine());
                    Console.WriteLine();
                    depositarEn.Depositar(montoDep);//LLamo al metodo depositar y deposita el dinero que ingreso el usuario

                    Console.WriteLine("Nuevo saldo:" + depositarEn.Saldo);
                    break;

                case 6:
                    Console.Write("Número de cuenta origen: ");
                    int nroOrigen = int.Parse(Console.ReadLine());
                    Console.Write("Número de cuenta destino: ");
                    int nroDestino = int.Parse(Console.ReadLine());
                    Console.Write("Monto: ");
                    double monto = double.Parse(Console.ReadLine());

                    // Transferir ahora se hace en el main (cambiamos esto, antes lo teniamos como metodo de banco)

                    Cuenta origen = null;//Cuando llame a origen o destino me estoy referiendo a Cuenta que esta vacia
                    Cuenta destino = null;

                    foreach (Cuenta c in banco.TodasLasCuentas())
                    {
                        if (c.Numero == nroOrigen) 
                        {
                            origen = c;
                        }
                     //Si encuentra una cuenta cuyo número (c.Numero) coincide con el ingresado (nroOrigen), 
                    //la guarda en la variable origen.

                        if (c.Numero == nroDestino) 
                        {
                            destino = c;
                        }
                 //Si encuentra una cuenta cuyo número (c.Numero) coincide con el ingresado (nroDestino), 
                    //la guarda en la variable destino.
                    }

                    if (origen == null || destino == null)
                    {
                        Console.WriteLine();
                        Console.WriteLine("Error: una de las cuentas no existe.");
                        break;
                    }

                    try
                    {
                        origen.Extraer(monto);//De la cuenta origen se extrae el monto que ingreso el usuario
                        destino.Depositar(monto);//Y de la cuenta destino se suma el monto que se extrajo
                        Console.WriteLine();
                        Console.WriteLine("Transferencia exitosa.");
                    }
                    catch (MontoinsuficienteExcepcion)//Se lanza una excepcion si el monto es insufieciente
                    {
                        Console.WriteLine();
                        Console.WriteLine("Saldo insuficiente en la cuenta origen.");
                    }
                    break;

                case 7:
                    if(banco.TodasLasCuentas().Count==0)
                    {
                      Console.WriteLine("No hay cuentas");
                    }
                    
                    else
                    {
                    foreach (var cta in banco.ListaCuentas)
                    {
                        Console.WriteLine("Cuenta Nº " + cta.Numero + " | " + cta.Titular.Apellido + "Nombre" + cta.Titular.Nombre + " | DNI: " + cta.Titular.Dni + " | Saldo: " + cta.Saldo);
                    }
                    
                    }
                
                    break;

                case 8:
                    if(banco.TodosLosClientes().Count==0)
                    {
                    	Console.WriteLine("No hay clientes");
                    }
                    else
                    {
                        foreach (var cli in banco.TodosLosClientes()) 
         
                     {
                        Console.WriteLine("Cliente: " + cli.Nombre + cli.Apellido + " - DNI: " + cli.Dni + " - Tel: " + cli.Telefono + " - Mail: " + cli.Mail);
                      }
                    }
            
               
     
                    break;
                default://Es necesario poner un default por si el usuario ingresa un numero que no esta en el menu
                    Console.WriteLine("Opcion no valida");
                    break;


            }

        } while (opcion != 0);//La condicion para salir del menu,"Si la opcion es distinto de 0, se sale del bucle"
                    
            		
			
			// TODO: Implement Functionality Here
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}